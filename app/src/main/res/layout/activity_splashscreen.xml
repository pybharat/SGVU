<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/bg_splash_screen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.splashscreen">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/size_10sp"
            android:layout_marginTop="@dimen/size_50sp"
            android:scaleType="fitCenter"
            android:src="@drawable/naac"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="250dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="10dp"

                android:src="@drawable/gyanvihar" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/size_100sp"
        android:layout_height="@dimen/size_50sp"
        app:cardCornerRadius="@dimen/size_30sp"
        android:layout_marginTop="@dimen/size_600sp"

        android:layout_marginLeft="@dimen/size_160sp"
        android:elevation="@dimen/size_25sp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:scaleType="fitCenter"
        android:src="@drawable/nirf"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>